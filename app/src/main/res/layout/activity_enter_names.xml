<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2BDE6"
    tools:context=".EnterNamesActivity">

    <EditText
        android:id="@+id/playerXName"
        android:layout_width="399dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="615dp"
        android:background="#7CA59B43"
        android:backgroundTint="#D3FFEB3B"
        android:hint="Player X Name" />

    <EditText
        android:id="@+id/playerOName"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="453dp"
        android:background="#AB220F15"
        android:backgroundTint="#E2C66B8A"
        android:hint="Player O Name" />

    <ImageView
        android:id="@+id/startGameBtn"
        android:layout_width="262dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="743dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="249dp"
        app:srcCompat="@drawable/start" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="414dp"
        android:layout_height="438dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="-53dp"
        android:layout_marginBottom="688dp"
        app:srcCompat="@drawable/photo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="345dp"
        android:layout_height="375dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="782dp"
        android:layout_marginEnd="-34dp"
        android:layout_marginBottom="-61dp"
        app:srcCompat="@drawable/photo2" />

</RelativeLayout>